<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SmaraPD</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-darkk fixed-left menu-w">
        <a class="mx-auto navbar-brand justify-content-center" href="@Url.Action("Index", "Agendamentos")">
            <img class="img-fluid" src="~/Content/img/SMARAPD_min.png" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Agendamentos")"><i class="fas fa-clipboard-list">&nbsp;</i>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseSalas" role="button" aria-expanded="false" aria-controls="collapseExample">
                        <i class="fas fa-home">&nbsp;</i>Salas
                    </a>
                </li>
                <div class="collapse" id="collapseSalas">
                    <div class="pl-4 bg-transparent">
                        <li class="nav-item">
                            <a class="mr-3 py-1 align-top text-success" href="@Url.Action("Create", "Salas")">Adicionar&nbsp;<i class="fas fa-plus"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="mr-3 py-1 align-top text-success" href="@Url.Action("Index", "Salas")">Editar/Excluir&nbsp;<i class="fas fa-edit"></i></a>
                        </li>
                    </div>
                </div>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseConta">
                        <i class="fas fa-user-circle">&nbsp;</i>Conta
                    </a>
                </li>
                <div class="collapse" id="collapseConta">
                    <div class="pl-4 bg-transparent">
                        @Html.Partial("_LoginPartial", new { @class="text-green" })
                    </div>
                </div>
            </ul>
        </div>
    </nav>
        @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
